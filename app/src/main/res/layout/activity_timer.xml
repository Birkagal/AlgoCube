<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".Activity_Timer">

    <ImageButton
        android:id="@+id/timer_btn_left"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="35dp"
        android:background="@drawable/left_button"
        app:srcCompat="@drawable/left_button" />

    <ImageButton
        android:id="@+id/timer_btn_right"
        android:layout_width="148dp"
        android:layout_height="148dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="35dp"
        android:background="@drawable/right_button" />

    <TextView
        android:id="@+id/timer_txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:text="@string/start_time"
        android:textSize="42sp" />

    <ImageView
        android:id="@+id/red_circle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_above="@id/timer_btn_reset"
        android:layout_alignStart="@id/timer_btn_reset"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/red_circle"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/green_circle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_above="@id/timer_btn_reset"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@id/red_circle"
        android:src="@drawable/green_circle"
        android:visibility="invisible" />

    <Button
        android:id="@+id/timer_btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/red"
        android:fontFamily="@font/staatliches"
        android:text="@string/reset"
        android:textSize="30sp" />

</RelativeLayout>